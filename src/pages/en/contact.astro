---
import Layout from "@layouts/Layout.astro";
import SectionContainer from "@components/SectionContainer.astro";
import TitleSection from "@components/TitleSection.astro";
import ContactForm from "@components/Contact.astro";
import MailIcon from "@components/icons/Mail.astro";

const contactEmail = import.meta.env.PUBLIC_CONTACT_EMAIL || 'work@oscargallegoruiz.com';
const linkedinUrl = import.meta.env.PUBLIC_LINKEDIN_URL || 'https://linkedin.com/in/oscargallegoruiz';
---

<Layout
  title="Contact - √ìscar Gallego"
  description="Have a project in mind? Contact me and let's talk about how we can work together."
  image="/og-image.jpg"
  lang="en"
>
  <main class="px-4">
    <!-- Hero Section -->
    <SectionContainer class="py-16 md:py-36">
      <div class="mx-auto max-w-3xl text-center">
        <h1
          class="text-balance text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-5xl md:text-6xl"
        >
          Let's Talk
        </h1>
        <p
          class="mt-6 text-pretty text-lg text-gray-600 dark:text-gray-400 md:text-xl"
        >
          I'm open to new opportunities and interesting projects.
          Contact me and let's see how I can help you.
        </p>
      </div>
    </SectionContainer>

    <!-- Contact Form Section -->
    <SectionContainer id="contact">
      <TitleSection>
        <MailIcon class="size-8" />
        Contact Form
      </TitleSection>
      <ContactForm useApi={false} />
    </SectionContainer>

    <!-- Additional Info Section -->
    <SectionContainer class="pb-24">
      <div class="mx-auto max-w-3xl">
        <div
          class="rounded-2xl border border-gray-200 bg-gradient-to-br from-blue-50 to-purple-50 p-8 dark:border-gray-800 dark:from-blue-900/20 dark:to-purple-900/20"
        >
          <h3
            class="mb-4 text-2xl font-bold text-gray-900 dark:text-white"
          >
            Prefer a meeting?
          </h3>
          <p class="mb-6 text-gray-600 dark:text-gray-400">
            If you prefer to talk directly, you can schedule a video call
            with me. I typically respond within 24 hours.
          </p>
          <div class="flex flex-wrap gap-4">
            <a
              href={`mailto:${contactEmail}`}
              class="inline-flex items-center justify-center gap-2 rounded-full bg-black px-6 py-3 text-base font-medium text-white transition hover:bg-gray-800 dark:bg-white dark:text-black dark:hover:bg-gray-200"
            >
              <MailIcon class="size-4" />
              Send email
            </a>
            <a
              href={linkedinUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center gap-2 rounded-full border border-gray-300 bg-white px-6 py-3 text-base font-medium text-gray-700 transition hover:border-gray-400 hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:border-gray-600 dark:hover:bg-gray-700"
            >
              <svg class="size-4" viewBox="0 0 24 24" fill="currentColor">
                <path
                  d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                ></path>
              </svg>
              Connect on LinkedIn
            </a>
          </div>
        </div>

        <!-- FAQ or Info Cards -->
        <div class="mt-12 grid gap-6 sm:grid-cols-2">
          <div
            class="rounded-2xl border border-gray-200 p-6 dark:border-gray-800"
          >
            <h4 class="mb-2 font-semibold text-gray-900 dark:text-white">
              ‚è±Ô∏è Response Time
            </h4>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              I typically respond within 24 business hours. For
              urgent inquiries, email me directly.
            </p>
          </div>
          <div
            class="rounded-2xl border border-gray-200 p-6 dark:border-gray-800"
          >
            <h4 class="mb-2 font-semibold text-gray-900 dark:text-white">
              üåç Availability
            </h4>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Based in M√°laga, Spain (GMT+1). Open to remote projects and
              international collaborations.
            </p>
          </div>
          <div
            class="rounded-2xl border border-gray-200 p-6 dark:border-gray-800"
          >
            <h4 class="mb-2 font-semibold text-gray-900 dark:text-white">
              üíº Project Types
            </h4>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Fullstack development, technical consulting, software
              architecture, and mentoring in Angular, NestJS, and Next.js.
            </p>
          </div>
          <div
            class="rounded-2xl border border-gray-200 p-6 dark:border-gray-800"
          >
            <h4 class="mb-2 font-semibold text-gray-900 dark:text-white">
              ü§ù Collaborations
            </h4>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Open to collaborating on open source projects, writing technical
              articles, and participating in community events.
            </p>
          </div>
        </div>
      </div>
    </SectionContainer>
  </main>
</Layout>
