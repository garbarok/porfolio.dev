---
import type { CollectionEntry } from 'astro:content'
import BlogCard from './blog-card.astro'

interface Props {
  featuredPost: CollectionEntry<'blog'>
  recentPosts: CollectionEntry<'blog'>[]
}

const { featuredPost, recentPosts } = Astro.props
---

<section class="mx-auto max-w-7xl px-4 pb-12 sm:px-6 lg:px-8">
  <div
    class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-12 sm:gap-y-16 lg:mx-0 lg:max-w-none lg:grid-cols-2"
  >
    <!-- Featured Post -->
    <BlogCard post={featuredPost} variant="horizontal" featured={true} />

    <!-- Recent Posts List -->
    <div
      class="mx-auto w-full max-w-2xl border-t border-gray-200 pt-12 sm:pt-16 lg:mx-0 lg:max-w-none lg:border-t-0 lg:pt-0 dark:border-gray-800"
    >
      <div class="-my-12 divide-y divide-gray-200 dark:divide-gray-800">
        {recentPosts.map((post) => <BlogCard post={post} variant="compact" />)}
      </div>
    </div>
  </div>
</section>
