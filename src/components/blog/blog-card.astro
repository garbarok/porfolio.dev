---
import type { CollectionEntry } from 'astro:content'
import { formatDate, calculateReadingTime } from '@/utils/blog'

interface Props {
  post: CollectionEntry<'blog'>
  featured?: boolean
  variant?: 'default' | 'compact' | 'horizontal'
}

const { post, featured = false, variant = 'default' } = Astro.props
const readingTime = calculateReadingTime(post.body || '')
---

{
  variant === 'compact' && (
    <article class="py-12">
      <div class="group relative max-w-xl">
        <time
          datetime={post.data.pubDate.toISOString()}
          class="block text-sm/6 text-gray-500 dark:text-gray-400"
        >
          {formatDate(post.data.pubDate)}
        </time>
        <h2 class="mt-2 text-lg font-semibold text-gray-900 transition-colors group-hover:text-gray-600 dark:text-white dark:group-hover:text-gray-300">
          <a href={`/blog/${post.id}`}>
            <span class="absolute inset-0" />
            {post.data.title}
          </a>
        </h2>
        <p class="mt-4 text-sm/6 text-gray-600 dark:text-gray-400">
          {post.data.description}
        </p>
      </div>
      <div class="mt-4 flex items-center gap-x-2.5">
        <div class="flex size-6 flex-none items-center justify-center rounded-full bg-gradient-to-br from-sky-400 to-blue-600 text-xs font-semibold text-white">
          {post.data.author
            .split(' ')
            .map((n) => n[0])
            .join('')}
        </div>
        <span class="text-sm/6 font-semibold text-gray-900 dark:text-white">
          {post.data.author}
        </span>
      </div>
    </article>
  )
}

{
  variant === 'default' && (
    <article class="flex flex-col items-start justify-between">
      <div class="relative w-full">
        {post.data.image && (
          <>
            <img
              alt={post.data.image.alt}
              src={post.data.image.url}
              class="aspect-video w-full rounded-2xl bg-gray-100 object-cover sm:aspect-2/1 lg:aspect-3/2 dark:bg-gray-800"
              loading="lazy"
            />
            <div class="pointer-events-none absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10 dark:ring-white/10" />
          </>
        )}
      </div>
      <div class="flex max-w-xl grow flex-col justify-between">
        <div class="mt-8 flex items-center gap-x-4 text-xs">
          <time
            datetime={post.data.pubDate.toISOString()}
            class="text-gray-500 dark:text-gray-400"
          >
            {formatDate(post.data.pubDate)}
          </time>
          {post.data.tags.length > 0 && (
            <>
              <span class="text-gray-300 dark:text-gray-600">·</span>
              <span class="text-xs text-gray-500 dark:text-gray-400">
                {readingTime} min de lectura
              </span>
              <span class="text-gray-300 dark:text-gray-600">·</span>
              <span class="relative z-10 rounded-full bg-gray-100 px-3 py-1.5 font-medium text-gray-700 transition-colors hover:bg-gray-200 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
                {post.data.tags[0]}
              </span>
            </>
          )}
        </div>
        <div class="group relative grow">
          <h3 class="mt-3 text-lg/6 font-semibold text-gray-900 transition-colors group-hover:text-gray-600 dark:text-white dark:group-hover:text-gray-300">
            <a href={`/blog/${post.id}`}>
              <span class="absolute inset-0" />
              {post.data.title}
            </a>
          </h3>
          <p class="mt-5 line-clamp-3 text-sm/6 text-gray-600 dark:text-gray-400">
            {post.data.description}
          </p>
        </div>
        <div class="relative mt-8 flex items-center gap-x-4 justify-self-end">
          <div class="flex size-10 items-center justify-center rounded-full bg-gradient-to-br from-sky-400 to-blue-600 text-sm font-semibold text-white">
            {post.data.author
              .split(' ')
              .map((n) => n[0])
              .join('')}
          </div>
          <div class="text-sm/6">
            <p class="font-semibold text-gray-900 dark:text-white">
              <span class="absolute inset-0" />
              {post.data.author}
            </p>
            <p class="text-gray-600 dark:text-gray-400">Desarrollador Web</p>
          </div>
        </div>
      </div>
    </article>
  )
}

{
  variant === 'horizontal' && featured && (
    <article class="mx-auto w-full max-w-2xl lg:mx-0 lg:max-w-lg">
      <time
        datetime={post.data.pubDate.toISOString()}
        class="block text-sm/6 text-gray-500 dark:text-gray-400"
      >
        {formatDate(post.data.pubDate)}
      </time>
      <h2
        id="featured-post"
        class="mt-4 text-3xl font-semibold tracking-tight text-pretty text-gray-900 dark:text-white sm:text-4xl"
      >
        {post.data.title}
      </h2>
      <p class="mt-4 text-lg/8 text-gray-600 dark:text-gray-400">
        {post.data.description}
      </p>
      <div class="mt-4 flex flex-col justify-between gap-6 sm:mt-8 sm:flex-row-reverse sm:gap-8 lg:mt-4 lg:flex-col">
        <div class="flex">
          <a
            href={`/blog/${post.id}`}
            aria-describedby="featured-post"
            class="text-sm/6 font-semibold text-blue-600 transition-colors hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300"
          >
            Continuar leyendo <span aria-hidden="true">&rarr;</span>
          </a>
        </div>
        <div class="flex lg:border-t lg:border-gray-200 lg:pt-8 dark:lg:border-gray-800">
          <div class="flex items-center gap-x-2.5 text-sm/6 font-semibold text-gray-900 dark:text-white">
            <div class="flex size-6 flex-none items-center justify-center rounded-full bg-gradient-to-br from-sky-400 to-blue-600 text-xs text-white">
              {post.data.author
                .split(' ')
                .map((n) => n[0])
                .join('')}
            </div>
            {post.data.author}
          </div>
        </div>
      </div>
    </article>
  )
}
