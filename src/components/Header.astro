---
const navItems = [
  {
    title: "Experiencia",
    label: "experiencia",
    url: "/#experiencia",
  },
  {
    title: "Proyectos",
    label: "proyectos",
    url: "/#proyectos",
  },
  {
    title: "Sobre m√≠",
    label: "sobre-mi",
    url: "/#sobre-mi",
  },
  {
    title: "Blog",
    label: "blog",
    url: "/blog",
  },
  {
    title: "Contacto",
    label: "contacto",
    url: "/contact",
  },
];

const currentPath = Astro.url.pathname;
---

<header
  class="fixed top-0 z-10 mx-auto mt-2 flex w-full items-center justify-center"
>
  <nav
    class="flex items-center justify-center gap-x-2 rounded-full px-3 py-2 text-sm font-medium text-white shadow-lg backdrop-blur-md"
  >
    {
      navItems.map((link) => (
        <a
          class:list={[
            "relative block whitespace-nowrap px-3 py-2 transition hover:text-blue-500",
            { "text-blue-500": currentPath === link.url || (currentPath.startsWith(link.url) && link.url !== "/") }
          ]}
          aria-label={link.label}
          href={link.url}
        >
          {link.title}
        </a>
      ))
    }
  </nav>
</header>

<script>
  document.addEventListener("astro:page-load", () => {
    const sections = document.querySelectorAll("section");
    const navItems = document.querySelectorAll("header nav a");
    const isHomePage = window.location.pathname === "/";

    if (!isHomePage) return;

    const getDistanceFromTop = (element: Element) => {
      return Math.abs(element.getBoundingClientRect().top);
    };

    const findClosestSectionToTop = (entries: IntersectionObserverEntry[]) => {
      const visibleSections = entries.filter(entry => entry.isIntersecting);

      if (visibleSections.length === 0) return null;

      return visibleSections.reduce((closest, current) => {
        const closestDistance = getDistanceFromTop(closest.target);
        const currentDistance = getDistanceFromTop(current.target);
        return currentDistance < closestDistance ? current : closest;
      });
    };

    const updateActiveNavItem = (sectionId: string) => {
      navItems.forEach((item) => {
        const isActive = item.getAttribute("aria-label") === sectionId;
        item.classList.toggle("text-blue-500", isActive);
      });
    };

    const handleIntersection = (entries: IntersectionObserverEntry[]) => {
      const closestSection = findClosestSectionToTop(entries);
      if (closestSection) {
        updateActiveNavItem(closestSection.target.id);
      }
    };

    const observer = new IntersectionObserver(handleIntersection, {
      root: null,
      rootMargin: "-20% 0px -35% 0px",
      threshold: [0, 0.25, 0.5, 0.75, 1.0],
    });

    sections.forEach((section) => observer.observe(section));

    document.onvisibilitychange = () => {
      if (document.visibilityState === "hidden") {
        observer.disconnect();
      } else {
        sections.forEach((section) => observer.observe(section));
      }
    };
  });
</script>

<style>
  nav {
    animation: nav-shadown 1s linear both;
    animation-timeline: scroll();
    animation-range: 0 100px;
    background-color: rgb(17 24 39);
  }

  @keyframes nav-shadown {
    0% {
      background-color: rgb(17 24 39);
      box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.3);
    }
    to {
      background-color: rgb(17 24 39);
      box-shadow:
        0 10px 15px -3px rgb(0 0 0 / 0.5),
        0 4px 6px -4px rgb(0 0 0 / 0.5);
      backdrop-filter: blur(12px);
    }
  }
</style>
